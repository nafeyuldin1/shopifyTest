  {
"type": "range",
"id": "desktop_paddingBottom",
"min": 0,
"max": 100,
"step": 1,
"unit": "px",
"label": "Desktop Content Padding Bottom",
"default": 0
},
  {
"type": "range",
"id": "mobile_paddingTop",
"min": 0,
"max": 100,
"step": 1,
"unit": "px",
"label": "Mobile Content Padding Top",
"default": 0
},
  {
"type": "range",
"id": "mobile_paddingBottom",
"min": 0,
"max": 100,
"step": 1,
"unit": "px",
"label": "Mobile Content Padding Bottom",
"default": 5
},
  {
"type": "range",
"id": "desktop_paddingLeftRight",
"min": 0,
"max": 100,
"step": 1,
"unit": "px",
"label": "Desktop Content Padding Horizontal",
"default": 5
},
    {
"type": "range",
"id": "mobile_paddingLeftRight",
"min": 0,
"max": 100,
"step": 1,
"unit": "px",
"label": "Mobile  Content Padding Horizontal",
"default": 3
}
         ]
       }
  ],
"presets": [
{
"name": "Grid Content",
  "blocks": [
        {
          "type": "item"
        },
    {
          "type": "item"
        },
    {
          "type": "item"
        }

]
}
]
}
