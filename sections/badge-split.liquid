{% schema %}
{
"name": "Badge Split",
"settings": [
{
"type": "image_picker",
"id": "Image",
"label": "Image Upload"
},
{
"type": "image_picker",
"id": "badgeImage",
"label": "Badge Upload"
},
{
"type": "range",
"id": "badge_width",
"min": 50,
"max": 500,
"step": 10,
"unit": "px",
"label": "Badge size",
"default": 100
},
{
"type": "select",
"id": "desktop_layout",
"options": [
{
"value": "image_left",
"label": "Image Left"
},
{
"value": "image_right",
"label": "Image Right"
}
],
"default": "image_left",
"label": "Desktop Image Position",
},
{
"type": "select",
"id": "mobile_layout",
"options": [
{
"value": "image_top",
"label": "Image Top"
},
{
"value": "image_bottom",
"label": "Image Bottom"
}
],
"default": "image_top",
"label": "Mobile Image Position",
},
{
"type": "color",
"id": "backgroundColor",
"label": "Background Color"
},
{
"type": "color",
"id": "fontColor",
"label": "Font Color"
},
{
"type": "text",
"id": "Headline",
"label": "Headline"
},
{
"type": "richtext",
"id": "Description",
"label": "Description"
}
],
"presets": [
{
"name": "Badge Split"
}
]
}
{% endschema %}